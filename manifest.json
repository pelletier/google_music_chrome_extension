{
  "manifest_version": 2,

  "name": "Small Player for Google Musicâ„¢",
  "description": "Unofficial small player for Google Music",
  "version": "1.0",
  "author": "Thomas Pelletier",

  "background": {
    "scripts": ["static/js/common.js", "static/js/background.js"],
    "persistent": false
  },

  "permissions": [
    "https://play.google.com/music",
    "tabs",
    "notifications"
  ],

  "content_scripts": [
    {
      "matches": ["https://play.google.com/music*"],
      "css": [],
      "js": ["vendor/jquery-2.0.3.min.js", "static/js/script.js"]
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "options_page": "options.html",

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "web_accessible_resources": [
    "vendor/jquery-2.0.3.min.js",
    "vendor/jquery-2.0.3.min.map"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
